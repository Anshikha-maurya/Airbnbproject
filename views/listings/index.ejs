   <div class="search-result list">
    <!-- <h1>Search Result</h1> -->
  
    <% if (allListings.length == 0) { %>
      <p>No listings match your search criteria.</p>
    <% } else { %>
      <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for (let listing of allListings) { %>
          <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card">
              <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
              <div class="card-body">
                <p class="card-text">
                  <b><%= listing.title %></b><br>
                  &#8377; <span class="price-original"> <%= Number(listing.price).toLocaleString("en-IN") %>/ night  &nbsp; +18%GST</span> 
                  <span class="tax-info price-with-gst" style="display: none;">
                    <%= Number(listing.priceWithGst).toLocaleString("en-IN") %> / night
                  </span>
                </p>
              </div>
            </div>
          </a>
        <% } %>
      </div>
    <% } %>
